extends layout 

block content 

    h1= title  

    form(method='POST' action='')
        input(type='text' placeholder='Enter name' name='name' required='true' value=(category===undefined)?'':category.name)

        input(type='text' placeholder='Enter description' name='description' required='true' value=(category === undefined)?'':category.description)

        button(type='submit') Create

        if errors 
            each error in errors 
                p #{error.msg}
        if form_error 
            p #{form_error}