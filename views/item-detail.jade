extends layout 

block content 

    h1 #{item.name}
    p #{item.description}
    a(href=item.category.url) #{item.category.name}
    p INR #{item.price}
    p Pieces left: #{item.quantity}
    hr
    button(type="button") 
        a(href=item.url+'/update') Update
    form(method="post" action=item.url+'/delete')
        button(type="submit") Delete
            
    
    